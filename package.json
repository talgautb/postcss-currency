{
  "name": "postcss-currency",
  "version": "2.0.0",
  "description": "PostCSS plugin replaces the name of currency with symbols.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "currency",
    "symbols"
  ],
  "author": "talgautb <talgautb@yandex.kz>",
  "license": "MIT",
